rule "Cross-Protocol: Door opens -> Turn on Light"
when
    Item Zigbee_Door changed to OPEN
then
    logInfo("Bridge", "Zigbee Door OPEN -> Turning on MQTT Relay")
    Room_Relay.sendCommand(ON)
end

rule "Sync Zigbee Light with MQTT Relay"
when
    Item Room_Relay changed
then
    // Синхронізація стану між двома різними протоколами
    Zigbee_Light.sendCommand(newState.toString)
end

rule "Cross-Protocol: Door closes -> Turn off Light"
when
    Item Zigbee_Door changed to CLOSED
then
    logInfo("Bridge", "Zigbee Door CLOSED -> Turning off MQTT Relay")
    Room_Relay.sendCommand(OFF)
end